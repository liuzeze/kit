<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="338dp"
    android:clickable="true"
    android:divider="@drawable/shape_width_divide_line"
    android:orientation="vertical"
    android:showDividers="middle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FAFAFA"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="选择城市"
            android:textColor="#333333"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/bt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="完成"
            android:textColor="#4b88f9"
            android:textSize="15dp"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:divider="@drawable/shape_divide_line"
        android:orientation="horizontal"
        android:showDividers="middle">

        <lz.com.tools.recycleview.ReboundReyclerView
            android:id="@+id/area_list1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none" />

        <lz.com.tools.recycleview.ReboundReyclerView
            android:id="@+id/area_list2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scrollbars="none" />

        <lz.com.tools.recycleview.ReboundReyclerView
            android:id="@+id/area_list3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scrollbars="none" />

    </LinearLayout>

</LinearLayout>